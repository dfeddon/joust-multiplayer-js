{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node2",
            "request": "attach",
            "name": "Attach to Port",
            "port": 4004
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:4004",
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "Launch Firefox against localhost, with sourcemaps",
            "type": "firefox",
            "request": "launch",
            "url": "http://localhost:4004",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "Attach to Chrome, with sourcemaps",
            "type": "chrome",
            "request": "attach",
            "port": 4004,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}",
            "cwd": "${workspaceRoot}"
        }
    ]
}